@model QLTHUETRO_BAOOANH.Models.PHIEUTHUTIEN

<style>
    body {
        background-color: #c9c9c9
    }
</style>
@{
    ViewBag.Title = "Xóa phiếu thu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<center>
    <h3 style="color: #ff0000;">Bạn chắc chắn muốn xóa phiếu thu này?</h3>
    <table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;background-color:#fff">
        <tr>
            <td style="padding: 20px;">
                <table cellpadding="2" cellspacing="10">
                    <caption style="color:black;text-align:center"><b>THÔNG TIN CHI TIẾT</b></caption>
                    <tr>
                        <td>Số phiếu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.SoPhieu)</td>
                    </tr>
                    <tr>
                        <td>Ngày thu:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:dd/MM/yyyy}", Model.NgayThu)</td>
                    </tr>
                    <tr>
                        <td>Tháng cần thu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.ThangCanThu)</td>
                    </tr>
                    <tr>
                        <td>Tiền phòng:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:0,0}", Model.TienThue)</td>
                    </tr>
                    <tr>
                        <td>Tiền điện:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:0,0}", Model.TienDien)</td>
                    </tr>
                    <tr>
                        <td>Tiền nước:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:0,0}", Model.TienNuoc)</td>
                    </tr>
                    <tr>
                        <td>Trạng thái phiếu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.TrangThai)</td>
                    </tr>
                    <tr>
                        <td>Khách được thu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.KHACHHANG.HoTen)</td>
                    </tr>
                    <tr>
                        <td>Phòng được thu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.PHONGTRO.MaPT)</td>
                    </tr>
                    <tr>
                        <td>Người thu:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.NHANVIEN.HoTenNV)</td>
                    </tr>
                   
                </table>
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:20px;">
            <input style="background-color:#212925;color:#ffd800" type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }

</center>