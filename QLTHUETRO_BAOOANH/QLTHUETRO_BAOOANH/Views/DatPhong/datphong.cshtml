@using (Html.BeginForm("xacnhandatphong", "DatPhong", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-4"></div>
    <div class="col-4">

        <div class="form-horizontal" style="border: 1px solid #212925">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.HoTen, "Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.NgaySinh, "Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input type="date" name="Ngaysinh" />
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.GioiTinh, "Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <div class="checkbox">
                        Nam @Html.RadioButtonFor(model => model.GioiTinh, "True", new { @checked = "checked" }) &nbsp;
                        Nữ @Html.RadioButtonFor(model => model.GioiTinh, "False")
                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.DiachiKH, "Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.DiachiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.DienThoaiKH, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.DienThoaiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoaiKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.CMND, "Số CMND", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:300px">
                @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group" style="margin-left:400px">
                <div class="col-md-offset-2 col-md-10">
                    <input style="background-color:#212925;color:#ffd800" type="submit" value="XÁC NHẬN ĐẶT PHÒNG" class="btn btn-default" />
                </div>
            </div>
        </div>
        @*<div class="col-sm-12 col-lg-12 col-md-12">
            <p style="margin-top:5px;margin-bottom:300px">
                <br />
                <a href="@Url.Action("datphong", "DatPhong", new { maPT = @Model.MaPT})">
                    <b>Trở về</b>
                </a>
            </p>
        </div>*@
    </div>
    <div class="col-4"></div>
}






