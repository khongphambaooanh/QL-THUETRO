@model QLTHUETRO_BAOOANH.Models.HOPDONG

<style>
    body {
        background-color: #c9c9c9
    }
</style>
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<center>
    <h3 style="color: #ff0000;">Bạn chắc chắn muốn xóa hợp đồng này?</h3>
    <table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;background-color:#fff">
        <tr>
            <td style="padding: 20px;">
                <table cellpadding="2" cellspacing="10">
                    <caption style="color:black;text-align:center"><b>THÔNG TIN CHI TIẾT</b></caption>
                    <tr>
                        <td>Số hợp đồng:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.MaHD)</td>
                    </tr>
                    <tr>
                        <td>Ngày lập:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:dd/MM/yyyy}", Model.NgayTaoHD)</td>
                    </tr>
                    <tr>
                        <td>Tiền cọc:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:0,0}", Model.TienCoc) đ</td>
                    </tr>
                    <tr>
                        <td>Ghi chú:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.GhiChu)</td>
                    </tr>
                    <tr>
                        <td>Khách hàng:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.KHACHHANG.HoTen)</td>
                    </tr>
                    <tr>
                        <td>Phòng trọ:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.PHONGTRO.MaPT)</td>
                    </tr>
                    <tr>
                        <td>Người lập:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.NHANVIEN.HoTenNV)</td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:20px;">
            <input style="background-color:#212925;color:#ffd800" type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }

</center>
