@model QLTHUETRO_BAOOANH.Models.User
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row justify-content-md-center">
    <h3 class="card-header" style="margin-left:10px">
        Vui lòng đăng nhập trước khi tiến hành đặt phòng!
    </h3>
    <div class="col-md-4">
        <div class="card">
            
            <div class="card-body">
                @using (Html.BeginForm("Login", "User_60131724", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <input style="background-color:#272222;color:#ffd800" type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div>
    Nếu CHƯA CÓ tài khoản, vui lòng đăng ký:
    @Html.ActionLink("Đăng ký", "Register")
</div>


