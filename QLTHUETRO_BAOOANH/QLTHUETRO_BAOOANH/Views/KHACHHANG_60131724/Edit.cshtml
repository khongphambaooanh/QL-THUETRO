    <div class="form-group">
        @Html.LabelFor(model => model.AnhKH, "Ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            Chọn ảnh mới:
            <input type="file" name="AnhKH" id="AnhKH" />
            <img style="width:100px" src="@Url.Content("~/images/people/" + Model.AnhKH)" />
            (Ảnh hiện tại)
            @Html.ValidationMessageFor(model => model.AnhKH, "", new { @class = "text-danger" })
        </div>
    </div>

