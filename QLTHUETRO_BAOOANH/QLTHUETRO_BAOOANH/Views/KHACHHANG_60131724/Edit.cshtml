            Ngày sinh hiện tại:
            @string.Format("{0:MM/dd/yyyy}", Model.NgaySinh)
            <br />
            Chọn ngày sinh mới:
            <input type="date" name="Ngaysinh" />
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
