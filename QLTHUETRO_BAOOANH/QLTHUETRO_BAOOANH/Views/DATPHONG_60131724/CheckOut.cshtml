            <a href="@Url.Action("CheckOut", "DATPHONG_60131724", new { id = @Model.MaPT})" class="dathang">
                <b>ĐẶT PHÒNG NGAY</b>
            </a>
        </div>*@
</div>

<div class="col-sm-12 col-lg-12 col-md-12">
    <p style="margin-top:5px;margin-bottom:100px">
        <br />
        |
        @Html.ActionLink("Trở về xem phòng", "danhsach")
    </p>
</div>


