@model QLTHUETRO_BAOOANH.Models.PHONGTRO

@{
    ViewBag.Title = "Chỉnh sửa thông tin phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var fileupload = $("#AnhPT");
            var image = $("#FileUpload");
            image.click(function () {
                fileupload.click();
            });
            fileupload.change(function () {
                var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
                document.getElementById("AnhPT").value = fileName;
            });
        });
    </script>
}

<center><h2>CHỈNH SỬA THÔNG TIN PHÒNG TRỌ</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaPT)

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.MaPT, "Mã phòng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.MaPT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaPT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.DienTich, "Diện tích", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.TiecIch, "Tiện ích", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.TiecIch, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TiecIch, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.DonGia, "Đơn giá", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.TrangThai, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.NgayCapNhat, "Ngày cập nhật", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            Ngày hiện tại:
            @string.Format("{0:MM/dd/yyyy}", Model.NgayCapNhat)
            <br />
            Chọn ngày mới:
            <input type="date" name="Ngaycapnhat" />
            @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.AnhPT, "Ảnh phòng trọ", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            Chọn ảnh mới:
            <input type="file" name="AnhPT" id="AnhPT" />
            <img style="width:100px" src="@Url.Content("~/images/phongtro/" + Model.AnhPT)" />
            (Ảnh hiện tại)
            @Html.ValidationMessageFor(model => model.AnhPT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        @Html.LabelFor(model => model.MaLPT, "Loại phòng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.DropDownList("MaLPT", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaLPT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:250px">
        <div class="col-md-offset-2 col-md-5">
            <input style="background-color:#212925;color:#ffd800" type="submit" value="Lưu thay đổi" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div style="margin-left:450px">
    @Html.ActionLink("Trở về", "phongtro")
</div>
