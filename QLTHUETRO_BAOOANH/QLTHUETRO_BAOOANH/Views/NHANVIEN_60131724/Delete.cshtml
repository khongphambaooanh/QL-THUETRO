@model QLTHUETRO_BAOOANH.Models.NHANVIEN

<style>
    body{background-color:#c9c9c9}
</style>
@{
    ViewBag.Title = "Xóa nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";

}

<center>
    <h3 style="color: #ff0000;"> Bạn có chắc chắn muốn xóa thông tin này?</h3>
    <table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;background-color:#fff">
        <tr>
            <td style="padding: 20px;">
                <table cellpadding="2" cellspacing="10">
                    <caption style="color:black;text-align:center"><b>THÔNG TIN CHI TIẾT</b></caption>
                    <tr>
                        <td>Mã nhân viên:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.MaNV)</td>
                    </tr>
                    <tr>
                        <td>Họ tên nhân viên:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.HoTenNV)</td>
                    </tr>
                    <tr>
                        <td>Giới tính:</td>
                        <td style="padding-left: 10px;">
                            @{if (Model.GioiTinhNV == true)
                                { gtinh = "Nam"; }
                                else
                                { gtinh = "Nữ"; }
                            }
                            @gtinh
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày sinh:</td>
                        <td style="padding-left: 10px;">@string.Format("{0:dd/MM/yyyy}", Model.NgaySinhNV)</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.DiaChiNV)</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.SdtNV)</td>
                    </tr>
                    <tr>
                        <td>Số CMND:</td>
                        <td style="padding-left: 10px;">@Html.DisplayFor(model => model.SoCMND)</td>
                    </tr>
                    <tr>
                        <td>Ảnh nhân viên:</td>
                        <td style="padding-left: 10px;"><img src="@Url.Content("~/images/people/" + Model.AnhNV)" width="100px" /></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:20px;">
            <input style="background-color:#212925;color:#ffd800" type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }

</center>